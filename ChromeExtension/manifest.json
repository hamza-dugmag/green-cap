{
    "manifest_version": 2,
    "name": "GreenCap",
    "version": "1.0",
    "description": "The greenest solution to online shopping!",
    "icons": {"128": "icon.png"},
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "GreenCap",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://amazon.ca/*"
            ],
            "js": ["content.js"]
        }
    ]
}
